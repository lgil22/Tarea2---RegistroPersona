        <Label Content="Telefono" HorizontalAlignment="Left" Margin="23,136,0,0" VerticalAlignment="Top" Height="26" Width="56" RenderTransformOrigin="0.533,-0.665"/>
        <Label Content="Cedula" HorizontalAlignment="Left" Margin="24,167,0,0" VerticalAlignment="Top" Height="26" Width="47" RenderTransformOrigin="0.319,1.335"/>
